<%= f.fields_for(:personal_information) do|g| %>
<p>
  <%= f.label :email, Spree.t(:email) %><br />
  <%= f.email_field :email, :class => 'title' %>
</p>

<div id="personal_box">
  <p>
    <%= g.label :full_name, Spree.t(:full_name) %><br />
    <%= g.text_field :full_name, :class => 'title' %>
  </p>
  <p>
    <%= g.label :cpf, Spree.t(:cpf) %><br />
    <%= g.text_field :cpf, :class => 'title' %>
  </p>
  <p>
    <%= g.label :gender, Spree.t(:gender) %><br />
    <%= g.radio_button :gender, "male" %> <%= Spree.t(:male) %>
    <%= g.radio_button :gender, "female" %> <%= Spree.t(:female) %>
  </p>
  <p>
    <%= g.label :birthday, Spree.t(:birthday) %><br />
    <%= g.text_field :birthday, :class => 'title' %>
  </p>
</div>
<% end %>
<div id="password-credentials">
  <p>
    <%= f.label :password, Spree.t(:password) %><br />
    <%= f.password_field :password, :class => 'title' %>
  </p>

  <p>
    <%= f.label :password_confirmation, Spree.t(:confirm_password) %><br />
    <%= f.password_field :password_confirmation, :class => 'title' %>
  </p>
</div>

<div data-hook="signup_below_password_fields"></div>

